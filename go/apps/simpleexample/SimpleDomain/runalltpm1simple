#
source ./defines

# These should be run as root.
$BINPATH/tao host init -tao_domain $DOMAINTPM1 -stacked -parent_type TPM1 -hosting process
sleep 5
$BINPATH/tao host start -tao_domain $DOMAINTPM1 &
sleep 5

#
# Starting the programs should be done as the unprivileged user it runs for
# to provide isolation.
# We run as root for conveniencea to avoid script clutter.
#
sleep 1
$BINPATH/tao run -tao_domain $DOMAINTPM1 $BINPATH/SimpleDomainService \
-config tao.config -service_path $DOMAINTPM1/SimpleDomainService &
sleep 1
$BINPATH/tao run -tao_domain $DOMAINTPM1 $BINPATH/SimpleServer -domain_config $DOMAINTPM1/tao.config \
-path /$DOMAINTPM1/SimpleServer &
sleep 1
$BINPATH/tao run -tao_domain $DOMAINTPM1 $BINPATH/SimpleClient -domain_config $DOMAINTPM1/tao.config \
-path /$DOMAINTPM1/SimpleClient  &

