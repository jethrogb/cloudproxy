#
source ./defines

# These should be run as root.
$BINPATH/tao host init -tao_domain $DOMAINTPM2 -stacked -parent_type TPM2 -hosting process
sleep 5
$BINPATH/tao host start -tao_domain $DOMAINTPM2 &
sleep 5

#
# Starting the programs should be done as the unprivileged user it runs for
# to provide isolation.
# We run as root for conveniencea to avoid script clutter.
#
sleep 1
$BINPATH/domain_server -pass xxx
sleep 1
$BINPATH/tao run -tao_domain $DOMAINTPM2 -domain_config "$DOMAINTPM2/tao.config" \
-path "/$DOMAINTPM2/SimpleServer" $BINPATH/SimpleServer \
-use_simpledomainservice=false &
sleep 1
$BINPATH/tao run -tao_domain $DOMAINTPM2 -domain_config "$DOMAINTPM2/tao.config" \
-path "/$DOMAINTPM2/SimpleServer" $BINPATH/SimpleClient \
-use_simpledomainservice=false &

